{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Starstream",
  "patterns": [
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.starstream",
          "match": "\\b(if|else|try|with|while|loop|yield|raise|fail|resume|return|assert)\\b"
        },
        {
          "name": "keyword.other.starstream",
          "match": "\\b(utxo|script|token|abi|impl|main|storage|mint|burn|bind|unbind|fn|let|let mut|true|false|event|error|effect|typedef|const)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.starstream",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.starstream",
          "match": "\\\\."
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.starstream",
          "match": "//.*?$"
        },
        {
          "name": "comment.block.starstream",
          "match": "/\\*.*?\\*/"
        }
      ]
    }
  },
  "scopeName": "source.starstream"
}
