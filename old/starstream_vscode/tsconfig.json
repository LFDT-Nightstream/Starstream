{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "out",
    "sourceMap": true,

    "module": "commonjs",
    "target": "es2024",
    "lib": ["ES2024"],

    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules", ".vscode-test"]
}
