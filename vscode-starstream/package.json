{
  "name": "starstream",
  "displayName": "Starstream support",
  "description": "Starstream language support for VSC",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/LFDT-Nightstream/Starstream",
    "directory": "vscode-starstream"
  },
  "browser": "./dist/extension.js",
  "files": [
    "package.json",
    "language-configuration.json",
    "dist/*"
  ],
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "starstream",
        "aliases": [
          "Starstream",
          "starstream"
        ],
        "extensions": [
          ".star"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "package": "vsce package",
    "vscode:prepublish": "rm -rf dist && npm run build-tree-sitter && npm run build-wasm && webpack --mode production",
    "build-tree-sitter": "cd ../tree-sitter-starstream && tree-sitter generate && tree-sitter build --wasm",
    "build-wasm": "cargo build -p starstream-web --target wasm32-unknown-unknown --release && wasm-bindgen --out-dir build --target bundler ../target/wasm32-unknown-unknown/release/starstream_web.wasm",
    "build": "webpack --mode none",
    "watch": "webpack --mode none --watch"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.98.0",
    "@vscode/vsce": "^3.6.0",
    "file-loader": "^6.2.0",
    "tree-sitter-cli": "^0.25.10",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "raw-loader": "^4.0.2",
    "vscode-languageclient": "^9.0.1",
    "web-tree-sitter": "^0.25.10"
  }
}
